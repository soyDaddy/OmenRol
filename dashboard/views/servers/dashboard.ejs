<%- include('../partials/header') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
    <div class="flex items-center">
      <% if (guild.iconURL()) { %>
        <img src="<%= guild.iconURL() %>" alt="<%= guild.name %>" class="h-16 w-16 rounded-full">
      <% } else { %>
        <div class="h-16 w-16 rounded-full bg-indigo-100 flex items-center justify-center">
          <span class="text-indigo-800 font-bold text-xl"><%= guild.name.charAt(0) %></span>
        </div>
      <% } %>
      <div class="ml-4">
        <h1 class="text-3xl font-bold text-gray-900"><%= guild.name %></h1>
        <p class="text-gray-500">Panel de administración</p>
      </div>
    </div>
    
    <div class="mt-4 md:mt-0 flex space-x-3">
      <a href="https://discord.com/channels/<%= guild.id %>" target="_blank" rel="noopener noreferrer" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <i class="fa-brands fa-discord mr-2"></i>
        Abrir en Discord
      </a>
    </div>
  </div>
  
  <!-- Estadísticas del servidor -->
  <div class="mb-8">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Estadísticas</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6 flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-indigo-100 rounded-md flex items-center justify-center">
            <i class="fas fa-users text-indigo-600 text-2xl"></i>
          </div>
          <div class="ml-4">
            <dt class="text-sm font-medium text-gray-500 truncate">Miembros</dt>
            <dd class="mt-1 text-3xl font-semibold text-indigo-600"><%= stats.members.toLocaleString() %></dd>
          </div>
        </div>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6 flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-green-100 rounded-md flex items-center justify-center">
            <i class="fas fa-comments text-green-600 text-2xl"></i>
          </div>
          <div class="ml-4">
            <dt class="text-sm font-medium text-gray-500 truncate">Canales</dt>
            <dd class="mt-1 text-3xl font-semibold text-indigo-600"><%= stats.channels.toLocaleString() %></dd>
          </div>
        </div>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6 flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-yellow-100 rounded-md flex items-center justify-center">
            <i class="fas fa-user-tag text-yellow-600 text-2xl"></i>
          </div>
          <div class="ml-4">
            <dt class="text-sm font-medium text-gray-500 truncate">Roles</dt>
            <dd class="mt-1 text-3xl font-semibold text-indigo-600"><%= stats.roles.toLocaleString() %></dd>
          </div>
        </div>
      </div>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6 flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-red-100 rounded-md flex items-center justify-center">
            <i class="fas fa-id-badge text-red-600 text-2xl"></i>
          </div>
          <div class="ml-4">
            <dt class="text-sm font-medium text-gray-500 truncate">Perfiles de rol</dt>
            <dd class="mt-1 text-3xl font-semibold text-indigo-600"><%= stats.profiles.toLocaleString() %></dd>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Secciones de configuración -->
  <div class="mb-8">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Configuración</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <a href="/servers/<%= guild.id %>/settings" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-12 w-12 bg-indigo-100 rounded-md flex items-center justify-center">
              <i class="fas fa-cog text-indigo-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">Configuración general</h3>
              <p class="mt-1 text-sm text-gray-500">
                Prefijo, idioma, roles de administración y más
              </p>
            </div>
          </div>
        </div>
      </a>
      
      <a href="/servers/<%= guild.id %>/roleplay" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-12 w-12 bg-purple-200 rounded-md flex items-center justify-center">
              <i class="fas fa-user-circle text-purple-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">Sistema de rol</h3>
              <p class="mt-1 text-sm text-gray-500">
                Configurar opciones de roleplay
              </p>
            </div>
          </div>
        </div>
      </a>
      
      <a href="/servers/<%= guild.id %>/entertainment" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-12 w-12 bg-green-100 rounded-md flex items-center justify-center">
              <i class="fas fa-gamepad text-green-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">Entretenimiento</h3>
              <p class="mt-1 text-sm text-gray-500">
                Minijuegos, comandos personalizados y más
              </p>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>
  
  <!-- Gestión de perfiles y preguntas -->
  <div class="mb-8">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Gestión de contenido</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <a href="/servers/<%= guild.id %>/profiles" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-12 w-12 bg-blue-100 rounded-md flex items-center justify-center">
              <i class="fas fa-users text-blue-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">Perfiles de usuario</h3>
              <p class="mt-1 text-sm text-gray-500">
                Ver y gestionar perfiles de usuarios
              </p>
            </div>
          </div>
        </div>
      </a>
      
      <a href="/servers/<%= guild.id %>/trivia" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-12 w-12 bg-yellow-100 rounded-md flex items-center justify-center">
              <i class="fas fa-question-circle text-yellow-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">Preguntas de trivia</h3>
              <p class="mt-1 text-sm text-gray-500">
                Crear y gestionar preguntas para el juego de trivia
              </p>
            </div>
          </div>
        </div>
      </a>
      
      <a href="/servers/<%= guild.id %>/logs" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-12 w-12 bg-red-100 rounded-md flex items-center justify-center">
              <i class="fas fa-list-alt text-red-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">Registros de actividad</h3>
              <p class="mt-1 text-sm text-gray-500">
                Ver registros de comandos y actividad del bot
              </p>
            </div>
          </div>
        </div>
      </a>
    </div>
  </div>

  <!-- Sistema de rol -->
  <div class="mb-8">
    <h2 class="text-xl font-bold text-gray-900 mb-4">Sistema de Rol</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <a href="/servers/<%= guild.id %>/race-class" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6 flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-blue-100 rounded-md flex items-center justify-center">
            <i class="fas fa-dragon text-blue-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Razas</h3>
            <p class="mt-1 text-sm text-gray-500">Explora las distintas razas disponibles en el mundo del rol.</p>
          </div>
        </div>
      </a>
      <a href="/servers/<%= guild.id %>/missions" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6 flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-yellow-100 rounded-md flex items-center justify-center">
            <i class="fas fa-map text-yellow-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Misiones</h3>
            <p class="mt-1 text-sm text-gray-500">Acepta misiones y completa objetivos para ganar recompensas.</p>
          </div>
        </div>
      </a>
      <a href="/servers/<%= guild.id %>/adventures" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6 flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-red-100 rounded-md flex items-center justify-center">
            <i class="fas fa-hiking text-red-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Aventuras</h3>
            <p class="mt-1 text-sm text-gray-500">Vive emocionantes aventuras en un mundo lleno de desafíos.</p>
          </div>
        </div>
      </a>
      <a href="/servers/<%= guild.id %>/inventory" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6 flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-purple-100 rounded-md flex items-center justify-center">
            <i class="fas fa-gem text-purple-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Ítems</h3>
            <p class="mt-1 text-sm text-gray-500">Descubre y consigue objetos únicos para mejorar tu personaje.</p>
          </div>
        </div>
      </a>
      <a href="/servers/<%= guild.id %>/skills" class="bg-white overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
        <div class="p-6 flex items-center">
          <div class="flex-shrink-0 h-12 w-12 bg-indigo-100 rounded-md flex items-center justify-center">
            <i class="fas fa-magic text-indigo-600 text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900">Habilidades</h3>
            <p class="mt-1 text-sm text-gray-500">Mejora tus habilidades y desarrolla nuevas destrezas.</p>
          </div>
        </div>
      </a>
    </div>
  </div>
  
  <!-- Información adicional -->
  <div>
    <h2 class="text-xl font-bold text-gray-900 mb-4">Información del servidor</h2>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="px-4 py-5 sm:p-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Nombre del servidor</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= guild.name %></dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">ID del servidor</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= guild.id %></dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Propietario</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= guild.ownerId %></dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Prefijo configurado</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono"><%= serverConfig.config.prefix %></dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Idioma</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= serverConfig.config.language %></dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Fecha de registro</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= new Date(serverConfig.createdAt).toLocaleString() %></dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>