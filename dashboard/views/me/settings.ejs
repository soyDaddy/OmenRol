<!-- JavaScript para la funcionalidad de pestañas y modales -->
<script>
  function openTab(evt, tabName) {
    // Ocultar todos los contenidos de las pestañas
    var tabContents = document.getElementsByClassName("tab-content");
    for (var i = 0; i < tabContents.length; i++) {
      tabContents[i].classList.add("hidden");
      tabContents[i].classList.remove("block");
    }
    
    // Desactivar todas las pestañas
    var tabLinks = document.getElementsByClassName("tab-link");
    for (var i = 0; i < tabLinks.length; i++) {
      tabLinks[i].classList.remove("border-indigo-500", "bg-indigo-50", "text-indigo-700");
      tabLinks[i].classList.remove("active");
      tabLinks[i].classList.add("border-transparent", "text-gray-600");
    }
    
    // Mostrar el contenido de la pestaña seleccionada
    document.getElementById(tabName).classList.remove("hidden");
    document.getElementById(tabName).classList.add("block", "animate-fadeIn");
    
    // Activar la pestaña seleccionada
    evt.currentTarget.classList.remove("border-transparent", "text-gray-600");
    evt.currentTarget.classList.add("border-indigo-500", "bg-indigo-50", "text-indigo-700", "active");
  }
  
  function openModal(modalId) {
    document.getElementById(modalId).classList.remove("hidden");
    setTimeout(() => {
      document.getElementById(modalId).querySelector('.transform').classList.add('scale-100');
      document.getElementById(modalId).querySelector('.transform').classList.remove('scale-95');
    }, 10);
  }
  
  function closeModal(modalId) {
    const modal = document.getElementById(modalId);
    modal.querySelector('.transform').classList.remove('scale-100');
    modal.querySelector('.transform').classList.add('scale-95');
    setTimeout(() => {
      modal.classList.add("hidden");
    }, 200);
  }
  
  // Configurar el checkbox de confirmación de eliminación de cuenta
  document.addEventListener('DOMContentLoaded', function() {
    var confirmDeleteCheckbox = document.getElementById('confirmDelete');
    var deleteAccountBtn = document.getElementById('deleteAccountBtn');
    
    if (confirmDeleteCheckbox && deleteAccountBtn) {
      confirmDeleteCheckbox.addEventListener('change', function() {
        deleteAccountBtn.disabled = !this.checked;
      });
    }
    
    // Cerrar modales al hacer clic fuera de ellos
    window.addEventListener('click', function(event) {
      if (event.target.classList.contains('fixed') && event.target.classList.contains('inset-0')) {
        var modals = document.querySelectorAll('[id$="Modal"]');
        modals.forEach(function(modal) {
          closeModal(modal.id);
        });
      }
    });
    
    // Comprobar si hay un hash en la URL para activar la pestaña correspondiente
    var hash = window.location.hash.substring(1);
    if (hash && document.getElementById(hash)) {
      var tabLink = document.querySelector('.tab-link[onclick*="' + hash + '"]');
      if (tabLink) {
        tabLink.click();
      }
    }

    // Añadir funcionalidad para tema oscuro y modo minimalista
    const themeSelect = document.getElementById('theme-select');
    const modeSelect = document.getElementById('mode-select');
    
    if (themeSelect) {
      // Establecer el valor inicial basado en localStorage
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'dark') {
        themeSelect.value = 'dark';
      } else if (savedTheme === 'cyberpunk') {
        themeSelect.value = 'cyberpunk';
      } else if (savedTheme === 'fantasy') {
        themeSelect.value = 'fantasy';
      }
      
      // Escuchar cambios en el selector de tema
      themeSelect.addEventListener('change', function() {
        const body = document.body;
        
        // Eliminar todos los temas existentes
        body.classList.remove('dark-theme', 'theme-cyberpunk', 'theme-fantasy');
        
        // Aplicar el nuevo tema
        if (this.value === 'dark') {
          body.classList.add('dark-theme');
          localStorage.setItem('theme', 'dark');
        } else if (this.value === 'cyberpunk') {
          body.classList.add('dark-theme', 'theme-cyberpunk');
          localStorage.setItem('theme', 'cyberpunk');
        } else if (this.value === 'fantasy') {
          body.classList.add('dark-theme', 'theme-fantasy');
          localStorage.setItem('theme', 'fantasy');
        } else {
          localStorage.setItem('theme', 'default');
        }
      });
    }
    
    if (modeSelect) {
      // Establecer el valor inicial basado en localStorage
      const savedMode = localStorage.getItem('mode');
      if (savedMode === 'minimal') {
        modeSelect.value = 'minimal';
      } else if (savedMode === 'detailed') {
        modeSelect.value = 'detailed';
      } else {
        modeSelect.value = 'auto';
      }
      
      // Vincular con el checkbox de reducción de movimiento
      const reduceMotionCheckbox = document.getElementById('reduceMotion');
      if (reduceMotionCheckbox) {
        reduceMotionCheckbox.checked = document.body.classList.contains('minimal-mode');
        
        reduceMotionCheckbox.addEventListener('change', function() {
          if (this.checked) {
            document.body.classList.add('minimal-mode');
            if (modeSelect) modeSelect.value = 'minimal';
            localStorage.setItem('mode', 'minimal');
          } else {
            document.body.classList.remove('minimal-mode');
            if (modeSelect) modeSelect.value = 'detailed';
            localStorage.setItem('mode', 'detailed');
          }
        });
      }
      
      // Escuchar cambios en el selector de modo
      modeSelect.addEventListener('change', function() {
        if (this.value === 'minimal') {
          document.body.classList.add('minimal-mode');
          if (reduceMotionCheckbox) reduceMotionCheckbox.checked = true;
          localStorage.setItem('mode', 'minimal');
        } else if (this.value === 'detailed') {
          document.body.classList.remove('minimal-mode');
          if (reduceMotionCheckbox) reduceMotionCheckbox.checked = false;
          localStorage.setItem('mode', 'detailed');
        } else {
          // Modo automático - detectar rendimiento del dispositivo
          localStorage.setItem('mode', 'auto');
          // La lógica de detección automática se implementará en otro script
        }
      });
    }
  });

  // Animación de entrada
  document.addEventListener('DOMContentLoaded', function() {
    // Añadir animaciones a elementos principales
    const elements = document.querySelectorAll('.card, .tab-content:not(.hidden)');
    elements.forEach((el, index) => {
      setTimeout(() => {
        el.classList.add('animate-fadeIn');
      }, index * 100);
    });
  });

  // Estilos para alto contraste
  document.getElementById('highContrast')?.addEventListener('change', function() {
    if (this.checked) {
      document.body.classList.add('high-contrast');
    } else {
      document.body.classList.remove('high-contrast');
    }
    localStorage.setItem('highContrast', this.checked);
  });

  // Cargar preferencia de alto contraste
  if (localStorage.getItem('highContrast') === 'true') {
    document.getElementById('highContrast').checked = true;
    document.body.classList.add('high-contrast');
  }

  // Keyframe animation
  document.addEventListener('DOMContentLoaded', function() {
    const style = document.createElement('style');
    style.textContent = `
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .animate-fadeIn {
        animation: fadeIn 0.3s ease-out forwards;
      }
    `;
    document.head.appendChild(style);
  });
</script>

