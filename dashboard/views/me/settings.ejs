<%- include('../partials/header') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="lg:grid lg:grid-cols-12 lg:gap-8">
    <!-- Sidebar con información del usuario -->
    <div class="lg:col-span-4 mb-8 lg:mb-0">
      <div class="bg-white shadow rounded-lg overflow-hidden mb-6 hover:shadow-md transition-all duration-300">
        <div class="px-4 py-5 sm:p-6 text-center">
          <% if (avatarURL) { %>
            <img src="<%= avatarURL %>" alt="<%= user.username %>" class="mx-auto h-24 w-24 rounded-full object-cover border-4 border-white shadow">
          <% } else { %>
            <div class="mx-auto h-24 w-24 rounded-full bg-indigo-100 flex items-center justify-center border-4 border-white shadow">
              <span class="text-indigo-800 font-bold text-2xl"><%= user.username.charAt(0) %></span>
            </div>
          <% } %>
          <h2 class="mt-4 text-xl font-medium text-gray-900"><%= user.username %><% if(user.discriminator) { %>#<%= user.discriminator %><% } %></h2>
          <p class="text-sm text-gray-500 truncate"><%= user.id %></p>
        </div>
        <div class="bg-gray-50 px-4 py-4 sm:px-6 text-center">
          <p class="text-xs text-gray-500">Miembro desde: <%= new Date(user.createdAt).toLocaleDateString() %></p>
        </div>
      </div>

      <!-- Menu de navegación -->
      <div class="bg-white shadow rounded-lg overflow-hidden mb-6">
        <nav class="flex flex-col">
          <button onclick="openTab(event, 'account')" class="tab-link active px-4 py-3 border-l-4 border-indigo-500 bg-indigo-50 text-indigo-700 flex items-center text-left hover:bg-indigo-100 transition-all duration-200">
            <i class="fas fa-user-circle mr-3"></i>
            <span>Cuenta</span>
          </button>
          <button onclick="openTab(event, 'preferences')" class="tab-link px-4 py-3 border-l-4 border-transparent text-gray-600 hover:bg-gray-50 hover:text-gray-900 flex items-center text-left transition-all duration-200">
            <i class="fas fa-sliders-h mr-3"></i>
            <span>Preferencias</span>
          </button>
          <button onclick="openTab(event, 'notifications')" class="tab-link px-4 py-3 border-l-4 border-transparent text-gray-600 hover:bg-gray-50 hover:text-gray-900 flex items-center text-left transition-all duration-200">
            <i class="fas fa-bell mr-3"></i>
            <span>Notificaciones</span>
          </button>
          <button onclick="openTab(event, 'privacy')" class="tab-link px-4 py-3 border-l-4 border-transparent text-gray-600 hover:bg-gray-50 hover:text-gray-900 flex items-center text-left transition-all duration-200">
            <i class="fas fa-shield-alt mr-3"></i>
            <span>Privacidad</span>
          </button>
          <button onclick="openTab(event, 'data')" class="tab-link px-4 py-3 border-l-4 border-transparent text-gray-600 hover:bg-gray-50 hover:text-gray-900 flex items-center text-left transition-all duration-200">
            <i class="fas fa-database mr-3"></i>
            <span>Datos</span>
          </button>
        </nav>
      </div>

      <div class="mb-6">
        <a href="/me" class="inline-flex items-center justify-center w-full px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
          <i class="fas fa-arrow-left mr-2"></i>Volver a mi perfil
        </a>
      </div>
    </div>
    
    <!-- Main content -->
    <div class="lg:col-span-8">
      <div class="bg-white shadow rounded-lg overflow-hidden hover:shadow-md transition-all duration-300">
        <% if (locals.success) { %>
          <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-4 animate-fadeIn">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-check-circle text-green-400"></i>
              </div>
              <div class="ml-3">
                <p class="text-sm text-green-700">Configuración actualizada correctamente.</p>
              </div>
              <div class="ml-auto pl-3">
                <div class="-mx-1.5 -my-1.5">
                  <button type="button" class="inline-flex rounded-md p-1.5 text-green-500 hover:bg-green-100 focus:outline-none transition-all duration-200" onclick="this.parentElement.parentElement.parentElement.parentElement.remove()">
                    <span class="sr-only">Cerrar</span>
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% } %>
        
        <% if (locals.error) { %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4 animate-fadeIn">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-circle text-red-400"></i>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700">Ocurrió un error al guardar los cambios.</p>
              </div>
              <div class="ml-auto pl-3">
                <div class="-mx-1.5 -my-1.5">
                  <button type="button" class="inline-flex rounded-md p-1.5 text-red-500 hover:bg-red-100 focus:outline-none transition-all duration-200" onclick="this.parentElement.parentElement.parentElement.parentElement.remove()">
                    <span class="sr-only">Cerrar</span>
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Contenido de las pestañas -->
        <!-- Cuenta -->
        <div id="account" class="tab-content block">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Información de la cuenta</h3>
            
            <form method="POST" action="/me/settings">
              <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Nombre de usuario</label>
                <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-gray-50" value="<%= user.username %>" readonly>
                <p class="mt-1 text-xs text-gray-500">Tu nombre de usuario se sincroniza con Discord.</p>
              </div>
              
              <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">ID de Discord</label>
                <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-gray-50" value="<%= user.id %>" readonly>
              </div>
              
              <% if (user.email) { %>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
                  <input type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-gray-50" value="<%= user.email %>" readonly>
                </div>
              <% } %>
              
              <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Último inicio de sesión</label>
                <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-gray-50" value="<%= new Date(user.lastLogin).toLocaleString() %>" readonly>
              </div>
              
              <div class="flex justify-end">
                <a href="/auth/logout" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200">
                  <i class="fas fa-sign-out-alt mr-2"></i>Cerrar sesión
                </a>
              </div>
            </form>
          </div>
        </div>
        
        <!-- Preferencias -->
        <div id="preferences" class="tab-content hidden">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Preferencias</h3>
            
            <form method="POST" action="/me/settings">
              <input type="hidden" name="section" value="preferences">
              
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">Tema</label>
                <select id="theme-select" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" name="theme">
                  <option value="default">Por defecto (Claro)</option>
                  <option value="dark">Oscuro</option>
                  <option value="cyberpunk">Cyberpunk</option>
                  <option value="fantasy">Fantasía</option>
                </select>
                <p class="mt-1 text-xs text-gray-500">El tema modificará los colores y el estilo visual de la aplicación.</p>
              </div>
              
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">Modo de visualización</label>
                <select id="mode-select" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" name="displayMode">
                  <option value="detailed">Detallado (animaciones y efectos)</option>
                  <option value="minimal">Minimalista (para dispositivos con menos recursos)</option>
                  <option value="auto">Automático (detectar según el dispositivo)</option>
                </select>
                <p class="mt-1 text-xs text-gray-500">El modo minimalista reduce animaciones y efectos visuales para mejorar el rendimiento en dispositivos con menos recursos.</p>
              </div>
              
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">Idioma</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" name="language">
                  <option value="es" selected>Español</option>
                  <option value="en">English</option>
                  <option value="fr">Français</option>
                  <option value="de">Deutsch</option>
                </select>
              </div>
              
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">Formato de fecha</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" name="dateFormat">
                  <option value="dd/mm/yyyy" selected>DD/MM/YYYY</option>
                  <option value="mm/dd/yyyy">MM/DD/YYYY</option>
                  <option value="yyyy-mm-dd">YYYY-MM-DD</option>
                </select>
              </div>
              
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">Tamaño de fuente</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" name="fontSize">
                  <option value="small">Pequeña</option>
                  <option value="medium" selected>Media</option>
                  <option value="large">Grande</option>
                </select>
              </div>
              
              <div class="mt-6 space-y-4">
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="compactMode" name="compactMode" type="checkbox" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="compactMode" class="font-medium text-gray-700">Modo compacto</label>
                    <p class="text-gray-500">Reducir el espaciado en la interfaz para mostrar más contenido.</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="reduceMotion" name="reduceMotion" type="checkbox" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="reduceMotion" class="font-medium text-gray-700">Reducir animaciones</label>
                    <p class="text-gray-500">Minimizar o eliminar animaciones para mejorar la accesibilidad.</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="highContrast" name="highContrast" type="checkbox" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="highContrast" class="font-medium text-gray-700">Alto contraste</label>
                    <p class="text-gray-500">Aumentar el contraste de colores para mejorar la legibilidad.</p>
                  </div>
                </div>
              </div>
              
              <div class="flex justify-end mt-6">
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                  <i class="fas fa-save mr-2"></i>Guardar cambios
                </button>
              </div>
            </form>
          </div>
        </div>
        
        <!-- Notificaciones -->
        <div id="notifications" class="tab-content hidden">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Configuración de notificaciones</h3>
            
            <form method="POST" action="/me/settings">
              <input type="hidden" name="section" value="notifications">
              
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Tipos de notificaciones</label>
                <div class="space-y-4">
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input id="notifyMessages" name="notifyMessages" type="checkbox" checked class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="notifyMessages" class="font-medium text-gray-700">Mensajes privados</label>
                      <p class="text-gray-500">Recibe notificaciones cuando alguien te envíe un mensaje.</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input id="notifyEvents" name="notifyEvents" type="checkbox" checked class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="notifyEvents" class="font-medium text-gray-700">Eventos y actividades</label>
                      <p class="text-gray-500">Recibe notificaciones sobre eventos de los servidores y actividades programadas.</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input id="notifyUpdates" name="notifyUpdates" type="checkbox" checked class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="notifyUpdates" class="font-medium text-gray-700">Actualizaciones del bot</label>
                      <p class="text-gray-500">Recibe notificaciones sobre nuevas funciones y mejoras.</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input id="notifyQuests" name="notifyQuests" type="checkbox" checked class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="notifyQuests" class="font-medium text-gray-700">Nuevas misiones</label>
                      <p class="text-gray-500">Recibe notificaciones cuando haya nuevas misiones disponibles.</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input id="notifyMentions" name="notifyMentions" type="checkbox" checked class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="notifyMentions" class="font-medium text-gray-700">Menciones</label>
                      <p class="text-gray-500">Recibe notificaciones cuando alguien te mencione.</p>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">Modo de notificación</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" name="notificationMode">
                  <option value="all" selected>Todas las notificaciones</option>
                  <option value="important">Solo importantes</option>
                  <option value="none">No mostrar notificaciones</option>
                </select>
              </div>
              
              <div class="flex justify-end">
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                  <i class="fas fa-save mr-2"></i>Guardar cambios
                </button>
              </div>
            </form>
          </div>
        </div>
        
        <!-- Privacidad -->
        <div id="privacy" class="tab-content hidden">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Configuración de privacidad</h3>
            
            <form method="POST" action="/me/settings">
              <input type="hidden" name="section" value="privacy">
              
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">Visibilidad del perfil</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" name="profileVisibility">
                  <option value="public">Público - Visible para todos</option>
                  <option value="friends">Amigos - Solo visible para amigos</option>
                  <option value="private" selected>Privado - Solo visible para ti</option>
                </select>
                <p class="mt-1 text-xs text-gray-500">Controla quién puede ver tu perfil de usuario y tus personajes.</p>
              </div>
              
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-1">Visibilidad de la actividad</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" name="activityVisibility">
                  <option value="public">Pública - Visible para todos</option>
                  <option value="friends">Amigos - Solo visible para amigos</option>
                  <option value="private" selected>Privada - Solo visible para ti</option>
                </select>
                <p class="mt-1 text-xs text-gray-500">Controla quién puede ver tu historial de actividad.</p>
              </div>
              
              <div class="mb-6 space-y-4">
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="showOnlineStatus" name="showOnlineStatus" type="checkbox" checked class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="showOnlineStatus" class="font-medium text-gray-700">Mostrar estado en línea</label>
                    <p class="text-gray-500">Permite que otros usuarios vean cuándo estás conectado.</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="allowFriendRequests" name="allowFriendRequests" type="checkbox" checked class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="allowFriendRequests" class="font-medium text-gray-700">Permitir solicitudes de amistad</label>
                    <p class="text-gray-500">Permite que otros usuarios te envíen solicitudes de amistad.</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="flex items-center h-5">
                    <input id="shareCharacterStats" name="shareCharacterStats" type="checkbox" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded">
                  </div>
                  <div class="ml-3 text-sm">
                    <label for="shareCharacterStats" class="font-medium text-gray-700">Compartir estadísticas de personajes</label>
                    <p class="text-gray-500">Permite que otros usuarios vean las estadísticas de tus personajes.</p>
                  </div>
                </div>
              </div>
              
              <div class="flex justify-end">
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                  <i class="fas fa-save mr-2"></i>Guardar cambios
                </button>
              </div>
            </form>
          </div>
        </div>
        
        <!-- Datos -->
        <div id="data" class="tab-content hidden">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Gestión de datos</h3>
            
            <div class="bg-blue-50 p-4 mb-6 rounded-md border border-blue-200">
              <div class="flex">
                <div class="flex-shrink-0">
                  <i class="fas fa-info-circle text-blue-500"></i>
                </div>
                <div class="ml-3">
                  <h4 class="text-sm font-medium text-blue-800">Información sobre tus datos</h4>
                  <p class="mt-2 text-sm text-blue-700">
                    Aquí puedes gestionar todos tus datos personales. Puedes exportarlos en formato JSON o eliminarlos de manera permanente.
                    Recuerda que la eliminación de datos es irreversible.
                  </p>
                </div>
              </div>
            </div>
            
            <div class="mb-6">
              <h4 class="text-md font-medium text-gray-800 mb-2">Exportar datos</h4>
              <p class="text-sm text-gray-500 mb-3">Exporta toda tu información personal y datos de perfil en formato JSON.</p>
              <div class="flex flex-col sm:flex-row sm:space-x-2 space-y-2 sm:space-y-0">
                <a href="/me/export/profiles" class="inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                  <i class="fas fa-file-export mr-2"></i>Exportar perfiles
                </a>
                <a href="/me/export/settings" class="inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                  <i class="fas fa-file-export mr-2"></i>Exportar configuración
                </a>
                <a href="/me/export/all" class="inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
                  <i class="fas fa-download mr-2"></i>Exportar todos los datos
                </a>
              </div>
            </div>
            
            <div class="border-t border-gray-200 pt-6">
              <h4 class="text-md font-medium text-red-600 mb-2">Eliminar datos</h4>
              <p class="text-sm text-gray-500 mb-3">Esta acción es irreversible. Se eliminarán todos tus datos y perfiles de manera permanente.</p>
              <div class="flex flex-col sm:flex-row sm:space-x-2 space-y-2 sm:space-y-0">
