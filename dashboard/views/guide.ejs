    <!-- Script para la navegaci√≥n -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Inicializaci√≥n: mostrar solo la primera secci√≥n
        document.querySelector('.guide-section').classList.remove('hidden');
        
        // Funci√≥n para cambiar de secci√≥n
        function changeSection(sectionId) {
          // Ocultar todas las secciones
          document.querySelectorAll('.guide-section').forEach(section => {
            section.classList.add('hidden');
          });
          
          // Mostrar la secci√≥n seleccionada
          document.getElementById(sectionId).classList.remove('hidden');
          
          // Actualizar clases de navegaci√≥n
          document.querySelectorAll('.nav-link').forEach(link => {
            link.classList.remove('active', 'text-indigo-600');
            link.classList.add('text-gray-600');
          });
          
          // Marcar como activo el enlace seleccionado
          document.querySelector(`a[href="#${sectionId}"]`).classList.add('active', 'text-indigo-600');
          document.querySelector(`a[href="#${sectionId}"]`).classList.remove('text-gray-600');
          
          // Desplazarse al inicio de la secci√≥n
          window.scrollTo({
            top: document.querySelector('.bg-white.shadow').offsetTop - 80,
            behavior: 'smooth'
          });
        }
        
        // A√±adir eventos de clic a los enlaces de navegaci√≥n
        document.querySelectorAll('.nav-link').forEach(link => {
          link.addEventListener('click', function(e) {
            e.preventDefault();
            const sectionId = this.getAttribute('href').substring(1);
            changeSection(sectionId);
            
            // Actualizar URL con hash
            history.pushState(null, null, `#${sectionId}`);
          });
        });
        
        // Gestionar navegaci√≥n por hash en la URL
        if (window.location.hash) {
          const sectionId = window.location.hash.substring(1);
          if (document.getElementById(sectionId)) {
            changeSection(sectionId);
          }
        }
        
        // Gestionar navegaci√≥n mediante botones de adelante/atr√°s
        window.addEventListener('popstate', function() {
          if (window.location.hash) {
            const sectionId = window.location.hash.substring(1);
            if (document.getElementById(sectionId)) {
              changeSection(sectionId);
            }
          } else {
            // Si no hay hash, mostrar la primera secci√≥n
            changeSection('inicio');
          }
        });
      });
    </script>

