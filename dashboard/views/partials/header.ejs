<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | OmenRol</title>
  
  <!-- Estilos base - Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  
  <!-- Carga dinámica del tema del usuario -->
  <link rel="stylesheet" href="/css/themes/light.css" id="theme-css">
  
  <!-- Favicon -->
  <link rel="icon" href="/img/logo.svg">
  
  <!-- Script para inicializar tema -->
  <script>
    // Cargar tema desde localStorage
    (function() {
      const savedTheme = localStorage.getItem('theme') || 'light';
      const themeLink = document.getElementById('theme-css');
      
      // Actualizar link CSS
      if (themeLink) {
        themeLink.href = `/css/themes/${savedTheme}.css`;
      }
      
      // Añadir clase al body para posibles estilos adicionales
      document.documentElement.setAttribute('data-theme', savedTheme);
    })();
  </script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  
  <!-- Navbar -->
  <nav class="bg-gray-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <a href="/" class="flex items-center">
              <img class="h-8 w-8" src="/img/logo.svg" alt="Logo">
              <span class="ml-2 text-lg font-bold">OmenRol</span>
            </a>
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <a href="/" class="<%= currentPath === '/' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> px-3 py-2 rounded-md text-sm font-medium">Inicio</a>
              <a href="/commands" class="<%= currentPath === '/commands' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> px-3 py-2 rounded-md text-sm font-medium">Comandos</a>
              <% if (req.user) { %>
                <a href="/servers" class="<%= currentPath.startsWith('/servers') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> px-3 py-2 rounded-md text-sm font-medium">Servidores</a>
              <% } else { %>
                <a href="/invite" class="<%= currentPath === '/invite' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> px-3 py-2 rounded-md text-sm font-medium">Invitar</a>
              <% } %>
              <a href="/support" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Soporte</a>
            </div>
          </div>
        </div>
        <div class="hidden md:block">
          <div class="ml-4 flex items-center md:ml-6">
            <!-- Selector de tema -->
            <div class="relative z-10">
              <button id="themeMenuButton" class="p-1 rounded-full text-gray-400 hover:text-white focus:outline-none flex items-center" aria-expanded="false" aria-haspopup="true">
                <i class="fas fa-palette"></i>
                <span class="ml-2 text-sm">Tema</span>
                <svg class="ml-1 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
              <div id="themeMenu" class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" style="z-index: 999" role="menu" aria-orientation="vertical" aria-labelledby="themeMenuButton" tabindex="-1">
                <button onclick="changeTheme('light')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" data-theme="light">
                  <i class="fas fa-sun mr-2 text-yellow-500"></i>Claro
                </button>
                <button onclick="changeTheme('dark')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" data-theme="dark">
                  <i class="fas fa-moon mr-2 text-blue-800"></i>Oscuro
                </button>
                <button onclick="changeTheme('cyberpunk')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" data-theme="cyberpunk">
                  <i class="fas fa-microchip mr-2 text-pink-600"></i>Cyberpunk
                </button>
                <button onclick="changeTheme('fantasy')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" data-theme="fantasy">
                  <i class="fas fa-hat-wizard mr-2 text-purple-600"></i>Fantasy
                </button>
                <button onclick="changeTheme('hell')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" data-theme="hell">
                  <i class="fas fa-fire mr-2 text-red-600"></i>Hell
                </button>
                <button onclick="changeTheme('god')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" data-theme="god">
                  <i class="fas fa-dove mr-2 text-blue-500"></i>God
                </button>
                <button onclick="changeTheme('nature')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" data-theme="nature">
                  <i class="fas fa-tree mr-2 text-green-600"></i>Nature
                </button>
                <button onclick="changeTheme('ocean')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" data-theme="ocean">
                  <i class="fas fa-water mr-2 text-blue-400"></i>Ocean
                </button>
                <button onclick="changeTheme('cosmos')" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" data-theme="cosmos">
                  <i class="fas fa-globe mr-2 text-pink-600"></i>Cosmos
                </button>
              </div>
            </div>
            
            <% if (req.user) { %>
              <div class="relative ml-4">
                <div>
                  <button id="userMenuButton" class="max-w-xs bg-gray-800 rounded-full flex items-center text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" aria-expanded="false" aria-haspopup="true">
                    <span class="sr-only">Abrir menú de usuario</span>
                    <img class="h-8 w-8 rounded-full" src="<%= req.user.avatar ? `https://cdn.discordapp.com/avatars/${req.user.id}/${req.user.avatar}.png` : 'https://cdn.discordapp.com/embed/avatars/0.png' %>" alt="Avatar">
                    <span class="ml-2 text-white"><%= req.user.username %></span>
                    <svg class="ml-1 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </div>
                <div id="userMenu" class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10" role="menu" aria-orientation="vertical" aria-labelledby="userMenuButton" tabindex="-1">
                  <a href="/me" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Mi Perfil</a>
                  <a href="/me/settings" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Configuración</a>
                  <div class="border-t border-gray-100"></div>
                  <a href="/auth/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Cerrar Sesión</a>
                </div>
              </div>
            <% } else { %>
              <a href="/auth/discord" class="ml-4 px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-md text-sm font-medium flex items-center">
                <i class="fa-brandsfa-discord mr-2"></i>
                Iniciar Sesión
              </a>
            <% } %>
          </div>
        </div>
        <div class="-mr-2 flex md:hidden">
          <!-- Mobile menu button -->
          <button id="mobileMenuButton" class="bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white">
            <span class="sr-only">Abrir menú principal</span>
            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobileMenu" class="hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        <a href="/" class="<%= currentPath === '/' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> block px-3 py-2 rounded-md text-base font-medium">Inicio</a>
        <a href="/commands" class="<%= currentPath === '/commands' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> block px-3 py-2 rounded-md text-base font-medium">Comandos</a>
        <% if (req.user) { %>
          <a href="/servers" class="<%= currentPath.startsWith('/servers') ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> block px-3 py-2 rounded-md text-base font-medium">Servidores</a>
        <% } else { %>
          <a href="/invite" class="<%= currentPath === '/invite' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white' %> block px-3 py-2 rounded-md text-base font-medium">Invitar</a>
        <% } %>
        <a href="/support" class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Soporte</a>
        
        <!-- Opciones de tema (móvil) -->
        <div class="px-3 py-2">
          <div class="text-gray-400 text-sm mb-2">Tema</div>
          <div class="grid grid-cols-3 gap-2">
            <button onclick="changeTheme('light')" class="bg-gray-700 hover:bg-gray-600 text-xs p-2 rounded text-center">
              <i class="fas fa-sun text-yellow-500 block mb-1"></i>Claro
            </button>
            <button onclick="changeTheme('dark')" class="bg-gray-700 hover:bg-gray-600 text-xs p-2 rounded text-center">
              <i class="fas fa-moon text-blue-800 block mb-1"></i>Oscuro
            </button>
            <button onclick="changeTheme('cyberpunk')" class="bg-gray-700 hover:bg-gray-600 text-xs p-2 rounded text-center">
              <i class="fas fa-microchip text-pink-600 block mb-1"></i>Cyber
            </button>
            <button onclick="changeTheme('fantasy')" class="bg-gray-700 hover:bg-gray-600 text-xs p-2 rounded text-center">
              <i class="fas fa-hat-wizard text-purple-600 block mb-1"></i>Fantasy
            </button>
            <button onclick="changeTheme('hell')" class="bg-gray-700 hover:bg-gray-600 text-xs p-2 rounded text-center">
              <i class="fas fa-fire text-red-600 block mb-1"></i>Hell
            </button>
            <button onclick="changeTheme('god')" class="bg-gray-700 hover:bg-gray-600 text-xs p-2 rounded text-center">
              <i class="fas fa-dove text-blue-500 block mb-1"></i>God
            </button>
          </div>
          
          <!-- Toggle modo minimalista (móvil) -->
          <button id="modeToggleMobile" class="mt-2 w-full bg-gray-700 hover:bg-gray-600 text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm flex items-center justify-center">
            <i id="modeIconMobile" class="fas fa-compress mr-2"></i>
            <span>Modo minimalista</span>
          </button>
        </div>
      </div>
      <div class="pt-4 pb-3 border-t border-gray-700">
        <% if (req.user) { %>
          <div class="flex items-center px-5">
            <div class="flex-shrink-0">
              <img class="h-10 w-10 rounded-full" src="<%= req.user.avatar ? `https://cdn.discordapp.com/avatars/${req.user.id}/${req.user.avatar}.png` : '/img/default-avatar.png' %>" alt="Avatar">
            </div>
            <div class="ml-3">
              <div class="text-base font-medium leading-none text-white"><%= req.user.username %></div>
              <div class="text-sm font-medium leading-none text-gray-400"><%= req.user.email || '' %></div>
            </div>
          </div>
          <div class="mt-3 px-2 space-y-1">
            <a href="/me" class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">Mi Perfil</a>
            <a href="/me/settings" class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">Configuración</a>
            <a href="/auth/logout" class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">Cerrar Sesión</a>
          </div>
        <% } else { %>
          <div class="mt-3 px-2 space-y-1">
            <a href="/auth/discord" class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">
              <i class="fa-brands fa-discord mr-2"></i>
              Iniciar Sesión
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Breadcrumbs and content -->
  <div class="flex-grow">
    <% if (currentPath !== '/') { %>
      <nav class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center py-3">
            <div class="flex flex-wrap">
              <a href="/" class="text-gray-500 hover:text-gray-700">Inicio</a>
              <% 
                const pathParts = currentPath.split('/').filter(Boolean);
                let currentPath2 = '';
                pathParts.forEach((part, index) => {
                  currentPath2 += '/' + part;
                  const isLast = index === pathParts.length - 1;
                  
                  let label = part.charAt(0).toUpperCase() + part.slice(1);
                  
                  // Special case for servers/:serverId
                  if (part === 'servers' && pathParts[index + 1] && !isNaN(pathParts[index + 1])) {
                    label = 'Servidores';
                  } else if (!isNaN(part) && pathParts[index - 1] === 'servers' && locals.server) {
                    label = server.name;
                  }
              %>
                <span class="mx-2 text-gray-400">/</span>
                <% if (isLast) { %>
                  <span class="text-gray-900 font-medium"><%= label %></span>
                <% } else { %>
                  <a href="<%= currentPath2 %>" class="text-gray-500 hover:text-gray-700"><%= label %></a>
                <% } %>
              <% }); %>
            </div>
          </div>
        </div>
      </nav>
    <% } %>

    <!-- Loader / Animación de carga -->
    <div class="loader-container" id="loader">
      <div class="loader"></div>
    </div>

    <!-- Main content -->
    <main>