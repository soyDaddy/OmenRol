<%- include('partials/header') %>

<!-- Hero Section con diseño más atrevido -->
<div class="bg-gradient-to-br from-purple-800 via-indigo-900 to-indigo-800 relative overflow-hidden">
  <!-- Patrones de fondo abstractos -->
  <div class="absolute inset-0 z-0 opacity-30">
    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
      <defs>
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
        </pattern>
        <pattern id="circles" width="100" height="100" patternUnits="userSpaceOnUse">
          <circle cx="50" cy="50" r="20" fill="none" stroke="white" stroke-width="0.5" opacity="0.7"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
      <rect width="100%" height="100%" fill="url(#circles)" />
    </svg>
  </div>
  
  <!-- Elementos decorativos -->
  <div class="absolute -top-20 -left-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
  <div class="absolute -bottom-20 -right-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
  
  <div class="max-w-6xl mx-auto py-20 px-4 sm:py-32 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center">
      <h1 class="text-6xl font-black text-white sm:text-7xl tracking-tight mb-2">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-indigo-300"><%= t('pages.index.hero.title') %></span>
      </h1>
      <p class="mt-6 text-xl text-indigo-100 max-w-2xl mx-auto font-medium">
        <%= t('pages.index.hero.description') %>
        <span class="block mt-2 text-purple-200"><%= t('pages.index.hero.subdescription') %></span>
      </p>
      <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
        <a href="/invite" class="px-8 py-4 text-base font-bold text-white bg-gradient-to-r from-purple-600 to-indigo-600 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:translate-y-[-2px] inline-flex items-center justify-center">
          <i class="fa-brands fa-discord mr-2 text-lg"></i><%= t('pages.index.hero.inviteButton') %>
        </a>
        <a href="/support" class="px-8 py-4 text-base font-bold text-indigo-900 bg-gradient-to-r from-indigo-200 to-purple-200 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:translate-y-[-2px] inline-flex items-center justify-center">
          <i class="fas fa-headset mr-2"></i><%= t('pages.index.hero.supportButton') %>
        </a>
      </div>
    </div>
  </div>
  
  <!-- Decoración de ondas -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 200">
      <path id="wave-path" fill-opacity="1" d="M0,128L48,144C96,160,192,192,288,192C384,192,480,160,576,149.3C672,139,768,149,864,154.7C960,160,1056,160,1152,149.3C1248,139,1344,117,1392,106.7L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
    </svg>
  </div>
</div>

<!-- Statistics Section con diseño más atrevido -->
<div class="relative bg-white py-16">
  <div class="max-w-6xl mx-auto px-4 lg:px-6">
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-6 md:gap-10">
      <% [
        { label: 'Servidores', value: botStats.servers, icon: 'fas fa-server' },
        { label: 'Usuarios', value: botStats.users, icon: 'fas fa-users' },
        { label: 'Comandos', value: botStats.comandos, icon: 'fas fa-terminal' },
        { label: 'Tiempo activo', value: botStats.uptime + ' horas', icon: 'fas fa-clock' }
      ].forEach(stat => { %>
        <div class="bg-indigo-100 rounded-2xl shadow-lg p-6 text-center transform hover:scale-105 transition-all duration-300 border border-gray-100">
          <div class="inline-flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-r from-purple-600 to-indigo-600 text-white">
            <i class="<%= stat.icon %> text-2xl"></i>
          </div>
          <div>
            <span class="block text-3xl font-black text-gray-900"><%= typeof stat.value === 'number' ? stat.value.toLocaleString() : stat.value %></span>
            <span class="block mt-1 text-sm font-medium text-indigo-600 uppercase tracking-wider"><%= stat.label %></span>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<!-- Latest Updates Section con diseño más atrevido -->
<div class="relative bg-indigo-100 py-16">
  <div class="max-w-6xl mx-auto px-4 lg:px-6">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-black text-gray-900 mb-4">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-indigo-600">Últimas Actualizaciones</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Mantente al día con las nuevas funciones y mejoras de OmenRol
      </p>
    </div>
    
    <% if (updates && updates.length > 0) { %>
      <% updates.forEach((update, index) => { %>
        <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100 mb-6"> <!-- Agregamos mb-6 aquí -->
          <div class="p-6 sm:p-10" id="updates-list">
            <div class="update-item">
              <div class="flex items-start">
                <div class="w-20 flex-shrink-0">
                  <span class="inline-flex items-center justify-center w-14 h-14 rounded-full bg-gradient-to-r from-purple-500 to-indigo-500 text-white">
                    <i class="fas fa-rocket text-xl"></i>
                  </span>
                </div>
                <div class="flex-1">
                  <div class="flex items-center mb-2">
                    <h3 class="text-xl font-bold text-gray-900"><%= update.title %></h3>
                    <span class="ml-auto text-sm font-medium text-indigo-600 px-3 py-1 bg-indigo-50 rounded-full">
                      <% const options = { 
                        day: 'numeric', 
                        month: 'long', 
                        year: 'numeric', 
                        hour: '2-digit', 
                        minute: '2-digit', 
                        hour12: false // Usar formato de 24 horas
                      };
                      %>
                      <%= new Date(update.date).toLocaleDateString(req.user?.locale || 'en-US', options) %>
                    </span>
                  </div>
                  <p class="text-gray-600 text-lg"><%= update.description %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
      <% } else { %>
        <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100">
          <div class="p-6 sm:p-10" id="updates-list">
        <div class="text-center py-16">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-r from-purple-500 to-indigo-500 text-white mb-6">
            <i class="fas fa-info-circle text-2xl"></i>
          </div>
          <p class="text-gray-600 text-xl">No hay actualizaciones disponibles</p>
        </div>
      </div>
    </div>
      <% } %>
  </div>
</div>

<!-- Features Section con diseño más atrevido -->
<div class="relative bg-white py-16">
  <div class="max-w-6xl mx-auto px-4 lg:px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-black text-gray-900 mb-4">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-indigo-600">Características Principales</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        OmenRol ofrece todas las herramientas que necesitas para crear aventuras inolvidables en tu servidor de Discord.
      </p>
    </div>
    
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <% [
        { 
          icon: 'fas fa-gamepad', 
          title: 'Entretenimiento', 
          description: 'Disfruta de minijuegos como trivia, adivinanzas y muchos más. Mantén a tu comunidad activa y divertida.', 
          link: '/commands?category=entertainment', 
          linkText: 'Ver minijuegos',
          gradient: 'from-pink-500 to-purple-500'
        },
        { 
          icon: 'fas fa-user-circle', 
          title: 'Sistema de Rol', 
          description: 'Crea personajes únicos, sube de nivel y vive aventuras épicas. Un sistema de rol completo para tus campañas.', 
          link: '/commands?category=roleplay', 
          linkText: 'Explorar rol',
          gradient: 'from-purple-500 to-indigo-500'
        },
        { 
          icon: 'fas fa-cog', 
          title: 'Dashboard Intuitivo', 
          description: 'Administra y personaliza el bot fácilmente. Configura todos los aspectos sin necesidad de comandos complejos.', 
          link: locals.user ? '/servers' : '/auth/discord', 
          linkText: locals.user ? 'Ir al panel' : 'Iniciar sesión',
          gradient: 'from-indigo-500 to-blue-500'
        }
      ].forEach(feature => { %>
        <div class="bg-indigo-100 rounded-3xl shadow-xl overflow-hidden border border-gray-100 transition-all duration-300 hover:shadow-2xl hover:translate-y-[-8px] group">
          <div class="p-8">
            <div class="mb-6">
              <div class="w-16 h-16 flex items-center justify-center rounded-2xl bg-gradient-to-r <%= feature.gradient %> text-white group-hover:scale-110 transition-transform duration-300">
                <i class="<%= feature.icon %> text-2xl"></i>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4"><%= feature.title %></h3>
            <p class="text-gray-400 mb-8 leading-relaxed text-lg"><%= feature.description %></p>
            <a href="<%= feature.link %>" class="inline-flex items-center px-6 py-3 bg-gradient-to-r <%= feature.gradient %> text-white rounded-lg font-medium transition-transform duration-300 hover:scale-105">
              <%= feature.linkText %> 
              <svg class="ml-2 w-5 h-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15.0378 6.34317L13.6269 7.76069L16.8972 11.0157L3.29211 11.0293L3.29413 13.0293L16.8619 13.0157L13.6467 16.2459L15.0643 17.6568L20.7079 11.9868L15.0378 6.34317Z" fill="currentColor"/>
              </svg>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<!-- Getting Started Section con diseño más atrevido -->
<div class="relative bg-indigo-100 py-16">
  <div class="max-w-6xl mx-auto px-4 lg:px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-black text-gray-900 mb-4">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-600 to-indigo-600">Comienza en Tres Pasos</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Es muy fácil empezar a usar OmenRol en tu servidor de Discord. ¡Sigue estos pasos!
      </p>
    </div>
    
    <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100 p-8 sm:p-12 relative">
      <div class="absolute inset-0 bg-white opacity-5"></div>
      <div class="relative z-10">
        <div class="grid md:grid-cols-3 gap-8 lg:gap-16">
          <% [
            { 
              step: '1', 
              title: 'Añade el bot', 
              description: 'Haz clic en "Añadir al servidor" e invita a OmenRol a tu servidor de Discord. Solo tomará unos segundos.',
              icon: 'fas fa-plus-circle'
            },
            { 
              step: '2', 
              title: 'Configura tus preferencias', 
              description: 'Accede al panel para personalizar el bot según las necesidades de tu comunidad. Define prefijos, roles y módulos activos.',
              icon: 'fas fa-sliders-h'
            },
            { 
              step: '3', 
              title: '¡Disfruta!', 
              description: 'Explora los comandos con <code>!help</code> o <code>/help</code> y comienza a crear aventuras épicas.',
              icon: 'fas fa-dice-d20'
            }
          ].forEach((item, index) => { %>
            <div class="text-center">
              <div class="w-20 h-20 mx-auto bg-gradient-to-r from-purple-600 to-indigo-600 rounded-full flex items-center justify-center text-white text-2xl font-bold mb-6">
                <i class="<%= item.icon %> text-2xl"></i>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-4"><%= item.title %></h3>
              <p class="text-gray-600 text-lg"><%= item.description %></p>
              
              <% if (index < 2) { %>
                <div class="hidden md:block absolute top-24 left-1/3 w-1/6 h-0.5 bg-gradient-to-r from-purple-300 to-indigo-300"></div>
              <% } %>
            </div>
          <% }) %>
        </div>
        
        <div class="mt-16 text-center">
          <a href="/invite" class="px-10 py-4 text-lg font-bold text-white bg-gradient-to-r from-purple-600 to-indigo-600 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:translate-y-[-2px] inline-flex items-center">
            <i class="fa-brands fa-discord mr-2 text-xl"></i>Añadir a Discord
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- CTA Section con diseño más atrevido -->
<div class="relative bg-white py-16 overflow-hidden">
  <!-- Elementos decorativos -->
  <div class="absolute -top-20 -left-20 w-64 h-64 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
  <div class="absolute -bottom-20 -right-20 w-64 h-64 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
  
  <div class="max-w-4xl mx-auto px-4 lg:px-6 text-center relative z-10">
    <h2 class="text-4xl font-black text-white mb-6">
      ¿Listo para comenzar tu aventura?
    </h2>
    <p class="text-xl text-indigo-100 max-w-3xl mx-auto mb-12">
      Únete a miles de jugadores y crea historias épicas con OmenRol. Completamente gratuito y con actualizaciones constantes.
    </p>
    
    <div class="flex flex-col sm:flex-row justify-center gap-4">
      <a href="/invite" class="px-10 py-4 text-lg font-bold text-indigo-900 bg-white rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:translate-y-[-2px] inline-flex items-center justify-center">
        <i class="fa-brands fa-discord mr-2 text-xl"></i>Comenzar ahora
      </a>
      <a href="/support" class="px-10 py-4 text-lg font-bold text-white bg-gradient-to-r from-indigo-500 to-purple-500 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:translate-y-[-2px] inline-flex items-center justify-center">
        <i class="fas fa-headset mr-2"></i>Únete al soporte
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>